= simple_form_for @post, html: {multipart: true} do |f|
  = f.input :category, collection: Post::CATEGORIES.map { |с| [t("post.category.#{с}"), с] },
                       label: 'Категория',
                       include_blank: 'Выберите категорию'
  = f.input :title,
            label: 'Заголовок',
            required: false
  = f.input :text,
            label: 'Текст',
            required: false, input_html: { rows: '10' }
  .actions
    = yield(f)
    = f.file_field :image
